import re

def check_password_strength(password):
    length_error = len(password) < 8
    lowercase_error = re.search(r"[a-z]", password) is None
    uppercase_error = re.search(r"[A-Z]", password) is None
    digit_error = re.search(r"\d", password) is None
    special_char_error = re.search(r"[!@#$%^&*(),.?\":{}|<>]", password) is None

    # Count how many criteria are met
    passed_criteria = 5 - sum([length_error, lowercase_error, uppercase_error, digit_error, special_char_error])

    # Strength level
    if passed_criteria == 5:
        strength = "Very Strong ğŸ’ª"
    elif passed_criteria >= 4:
        strength = "Strong âœ…"
    elif passed_criteria >= 3:
        strength = "Moderate âš ï¸"
    else:
        strength = "Weak âŒ"

    # Detailed feedback
    feedback = []
    if length_error:
        feedback.append("- Password must be at least 8 characters long.")
    if lowercase_error:
        feedback.append("- Add lowercase letters.")
    if uppercase_error:
        feedback.append("- Add uppercase letters.")
    if digit_error:
        feedback.append("- Include digits (0â€“9).")
    if special_char_error:
        feedback.append("- Add special characters (e.g., !, @, #, etc.)")

    return strength, feedback

def main():
    print("ğŸ” Password Strength Checker ğŸ”")
    password = input("Enter your password: ")

    strength, feedback = check_password_strength(password)

    print("\nPassword Strength:", strength)
    if feedback:
        print("Suggestions to improve your password:")
        for f in feedback:
            print(f)

if __name__ == "__main__":
    main()
